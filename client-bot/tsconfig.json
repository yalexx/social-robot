{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "sourceMap": false,
    "strict": false,
    "types": [
      "node"
    ]
  },
  "esModuleInterop": true,
  "exclude": [
    "node_modules",
    "/node_modules",
    "**/*.spec.ts",
    "**/*.d.ts"
